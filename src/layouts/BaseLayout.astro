---
import "src/styles/global.css";
interface Props {
  title?: string;
}

const { title = "Brad Newman - Web Developer" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="src/styles/global.css" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav aria-label="Primary">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Brad Newman</p>
    </footer>
  </body>
</html>
