---
import "src/styles/global.css";
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brad Newman - Web Developer",
  description = "Brad Newman is a frontend web developer specializing in React, accessible UI, and modern component architecture.",
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Brad Newman" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="BN.dev" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav aria-label="Primary">
        <a href="/" aria-label="Brad Newman home">
          <img src="/bn-logo.png" alt="Brad Newman" width="80" height="50" />
        </a>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Brad Newman</p>
    </footer>
  </body>
</html>
